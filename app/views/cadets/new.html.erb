<h1> Please Create Your Profile </h1>
    <!-- Should only be accessable after they "created a user" -->
        <!-- Don't add user to table till profile is made -->
<%= render 'form' %>


<%= form_with scope: :cadet, url: cadets_path, local: true do |f| %>

    <p>
        <%= f.label :First_Name %> <br/>
        <%= f.text_field :F_NAME %>
    </p>

    <p>
        <%= f.label :Middle_Name %> <br/>
        <%= f.text_field :M_INITIAL %>
    </p>

    <p>
        <%= f.label :Last_Name %> <br/>
        <%= f.text_field :L_NAME %>
    </p>

    <p>
    <!-- Should be auto populated with The CWID That is active -->
        <%= f.label :CWID %> <br/>
        <%= f.text_field :CWID %>
    </p>

    <!-- Link name to ID -->
    <p>
        <%= f.label :C_Status %> <br/>
        <%= f.select :C_Status, ['Knob', 'Sophomore', 'Junior', 'Senior']%>
    </p>

    <!-- Link Company Name to Company ID -->
    <p>
        <%= f.label :Company %> <br/>
        <%= f.select :CO_ID, ['Alpha', 'Bravo', 'Charlie', 'Delta', 'Echo', 'F-Troop', 'Golf', 'Hotel', 'India', 'Kilo', 'Lima', 'Mike', 'November', 'Oscar', 'Papa', 'Romeo', 'Sierra', 'Tango', 'Victor' 'Palmetto Battery', 'Band']%>
    </p>

    <p>
        <%= f.label :Room_Number %> <br/>
        <%= f.text_field :R_NUM %>
    </p>

    <p>
        <%= f.label :Phone_Number %> <br/>
        <%= f.text_field :P_NUM %>
    </p>

    <p>
        <%= f.label :Email, "Email Address" %> <br/>
        <%= f.text_field :EMAIL %>
    </p>

    <!-- Make Rank Drop Down -->
    <p>
        <%= f.label :RANK_ID, "Rank" %> <br/>
        <%= f.text_field :RANK_ID %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>

<%= button_to "Back to Welcome", '/welcome', method: :get%>