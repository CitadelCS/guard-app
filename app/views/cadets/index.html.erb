<body style= "background-color:#d4e3e5;">
<h1>Company Spreadsheet</h1>
<p>I will contain the spreadsheet view for cadet schedules</p>
<style type="text/css">
.tftable {font-size:12px;color:#333333;width:100%;border-width: 1px;border-color: #729ea5;border-collapse: collapse;}
.tftable th {font-size:12px;background-color:#acc8cc;border-width: 1px;padding: 8px;border-style: solid;border-color: #729ea5;text-align:left;}
.tftable tr {background-color:#d4e3e5;}
.tftable td {font-size:12px;border-width: 1px;padding: 8px;border-style: solid;border-color: #729ea5;}
.tftable tr:hover {background-color:#ffffff;}
</style>

    <table class="tftable" border="1">
        <thead>
            <tr>
                <th>Cadet Name</th>
                <th>Monday</th>
                <th>Tuesday</th>
                <th>Wednesday</th>
                <th>Thursday</th>
                <th>Friday</th>
                <th colspan = 3>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% @cadets.each do |cadet| %>
            <tr>
                <td><%= cadet.F_NAME %> <%= cadet.L_NAME %> </td>
                <td><%= cadet.monday %> </td>
                <td><%= cadet.tuesday %> </td>
                <td><%= cadet.wednesday %> </td>
                <td><%= cadet.thursday %> </td>
                <td><%= cadet.friday %> </td>
                <td> <%= link_to 'Show', cadet_path(cadet) %> </td>
                <td> <%= link_to 'Edit', edit_cadet_path(cadet) %> </td>
                <td> <%= button_to 'Delete', cadet_path(cadet), method: :delete, data: { confirm: "Are you sure?"} %> </td>
            </tr>
            <% end %>
        </tbody> 
    </table>

    <table class="tftable" border="1">
    <tbody>

        <thead>
            <tr>
                <th>Times</th>
                <th><%= @cadet1.F_NAME %> <%=  @cadet1.L_NAME %></th>
                <th><%= @cadet2.F_NAME %> <%=  @cadet1.L_NAME %></th>
                <th><%= @cadet3.F_NAME %> <%=  @cadet1.L_NAME %></th>
                <th><%= @cadet4.F_NAME %> <%=  @cadet1.L_NAME %></th>
                <th><%= @cadet5.F_NAME %> <%=  @cadet1.L_NAME %></th>
                <th colspan = 3>Actions</th>
            </tr>
        </thead>

     </tbody>   

        <tbody>
            
            <tr>
                <td> Display an array of times </td>
                <td> 1</td>
                <td> 2</td>
                <td> 3</td>
                <td> 4</td>
                <td> 5</td>
                <td> 6</td>
           
                
            </tr>
         
        </tbody> 
    </table>

    <p>
    <%= link_to 'Add new cadet', new_cadet_path %>
    </p>
</body>
